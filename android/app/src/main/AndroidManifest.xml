<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.sporthenon.android" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <!-- LANGUAGE CHOICE -->
        <activity
            android:name=".activity.LangActivity"
            android:label="@string/select.language">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- SPORTS -->
        <activity
            android:name=".activity.SportActivity"
            android:label="@string/sport">
        </activity>
        <!-- CHAMPIONSHIPS -->
        <activity
            android:name=".activity.ChampionshipActivity"
            android:label="@string/championship">
        </activity>
        <!-- EVENTS -->
        <activity
            android:name=".activity.EventActivity"
            android:label="@string/event">
        </activity>
        <!-- RESULTS -->
        <activity
            android:name=".activity.ResultActivity"
            android:label="@string/results">
        </activity>
        <!-- SINGLE RESULT -->
        <activity
            android:name=".activity.Result1Activity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>