<resources>

    <style name="CustomTitle">
        <item name="android:background">#555</item>
    </style>
    <style name="CustomRadio" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:fontFamily">Verdana</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">Verdana</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="CustomPath" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">Verdana</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dip</item>
        <item name="android:background">@drawable/border1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>