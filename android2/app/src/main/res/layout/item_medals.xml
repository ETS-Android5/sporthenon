<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF">

    <LinearLayout
        android:id="@+id/medal_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:padding="2dip"
        android:paddingStart="5dip">
        <ImageView
            android:id="@+id/medal_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/medal_text"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/medal_thumbnail"
        android:paddingStart="5dip"
        android:padding="7dip"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/medal_bronze"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="5dip"
        android:drawableStart="@drawable/bronze"
        />
    <TextView
        android:id="@+id/medal_silver"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="45dip"
        android:drawableStart="@drawable/silver"
        />
    <TextView
        android:id="@+id/medal_gold"
        style="@style/CustomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingEnd="85dip"
        android:drawableStart="@drawable/gold"
        />

</RelativeLayout>