<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.sporthenon.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true"
    >
        <!-- Main Activity (Splash screen) -->
        <activity android:name=".activity.SplashActivity" >
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LangActivity" />
        <!--RESULTS-->
        <activity android:name=".activity.SportActivity" />
        <activity android:name=".activity.ChampionshipActivity" />
        <activity android:name=".activity.EventActivity" />
        <activity android:name=".activity.ResultActivity" />
        <activity android:name=".activity.Result1Activity" />
        <!--CALENDAR-->
        <activity android:name=".activity.YearActivity" />
        <activity android:name=".activity.MonthActivity" />
        <activity android:name=".activity.CalendarActivity" />
        <!--OLYMPICS-->
        <activity android:name=".activity.OlympicsActivity" />
        <activity android:name=".activity.OlympicsMedalsActivity" />
        <activity android:name=".activity.OlympicsModeActivity" />
        <activity android:name=".activity.OlympicsPodiumsActivity" />
        <activity android:name=".activity.OlympicsTypeActivity" />
        <!--US LEAGUES-->
        <activity android:name=".activity.LeagueActivity" />
        <activity android:name=".activity.TeamActivity" />
        <activity android:name=".activity.USLeaguesRecordTypeActivity" />
        <activity android:name=".activity.USLeaguesTypeActivity" />
        <activity android:name=".activity.USLeaguesRequestActivity" />
        <!--LAST UPDATES-->
        <activity android:name=".activity.LastUpdatesActivity" />
    </application>

</manifest>
